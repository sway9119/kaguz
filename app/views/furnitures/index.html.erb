<div class="row">
    <div class="col-3">
        <div class="sidebar_fixed">
            <%= render 'home/sidebar' %>
        </div>
    </div>
    <div class="col-9">
        <h3>家具一覧</h3>
        <div class="card-columns">
            <% @furnitures.each do |furniture| %>
            <div class="card" style="width: 18rem;">
                <% if furniture.image.present? %>
                <%= image_tag furniture.image_url, class: "bd-placeholder-img card-img-top", size: "100%x286" %>
                <% else %>
                <svg class="bd-placeholder-img card-img-top" width="100%" height="286" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
                <% end %>
                <div class="card-body">
                    <div class="">カテゴリー：<%= furniture.category.name %></div>
                    <div class="">家具名　　：<%= link_to furniture.name, furniture_path(furniture.id) %></div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>