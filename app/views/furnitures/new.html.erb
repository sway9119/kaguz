<h1>家具追加</h1>
<%= form_for @furniture do |f| %>
    <div class="form-group field col-9">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :image, class: "control-label" %>
        <div class="custom-file">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "custom-file-input" %>
            <label class="custom-file-label" for="inputFile">ファイルが選択されていません。</label>
        </div>
        <%= f.label :category_id, class: "control-label" %>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "選択してください"}, {class: "form-control"} %>
        
        <%= f.label :scene_id, class: "control-label" %>
        <div>
            <%= f.collection_check_boxes(:scene_ids, Scene.all, :id, :name) do |b| %>
                <label class="checkbox-inline">
                <%= b.check_box class:"form-control2" do %>
                    <%= b.check_box + b.text %>
                <% end %>
                    <%= b.label {b.text} %>
                </label>
            <% end %>
        </div>
        <div>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>

<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
<script>
  bsCustomFileInput.init();
</script>